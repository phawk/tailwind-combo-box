<div data-controller="fancy-select">
  <label for="combobox" class="block text-sm font-medium text-gray-700"><%= label %></label>
  <%= hidden_field_tag form_name, nil, data: { fancy_select_target: "input" } %>
  <div class="relative mt-1">
    <div data-fancy-select-target="selected" class="w-full rounded-md border border-gray-300 bg-white py-2 pl-3 pr-12 shadow-sm sm:text-sm">
      Pick an item...
    </div>
    <button data-action="fancy-select#toggle" type="button" class="absolute inset-y-0 w-full right-0 flex flex-row-reverse items-center rounded-r-md px-2 focus:outline-none">
      <!-- Heroicon name: solid/selector -->
      <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
        <path fill-rule="evenodd" d="M10 3a1 1 0 01.707.293l3 3a1 1 0 01-1.414 1.414L10 5.414 7.707 7.707a1 1 0 01-1.414-1.414l3-3A1 1 0 0110 3zm-3.707 9.293a1 1 0 011.414 0L10 14.586l2.293-2.293a1 1 0 011.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd" />
      </svg>
    </button>

    <ul data-fancy-select-target="list" class="hidden absolute z-10 mt-1 max-h-56 w-full overflow-auto rounded-md bg-white py-1 text-base shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none sm:text-sm" id="options" role="listbox">
      <!--
        Combobox option, manage highlight styles based on mouseenter/mouseleave and keyboard navigation.

        Active: "text-white bg-indigo-600", Not Active: "text-gray-900"
      -->
      <% items.each do |item| %>
        <li data-fancy-select-target="item" data-action="click->fancy-select#choose" data-id="<%= item.id %>" class="group relative cursor-default select-none py-2 pl-3 pr-9 text-gray-900 hover:text-white hover:bg-indigo-600" id="option-0" role="option" tabindex="-1">
          <div data-js="label" class="flex items-center">
            <%= image_tag item.image_url, class: "h-6 w-6 flex-shrink-0 rounded-full", alt: item.label %>
            <!-- Selected: "font-semibold" -->
            <span data-js="title" class="ml-3 truncate"><%= item.label %></span>
          </div>

          <!--
            Checkmark, only display for selected option.

            Active: "text-white", Not Active: "text-indigo-600"
          -->
          <span data-js="check" class="hidden absolute inset-y-0 right-0 flex items-center pr-4 text-indigo-600 group-hover:text-white">
            <!-- Heroicon name: solid/check -->
            <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
            </svg>
          </span>
        </li>
      <% end %>
    </ul>
  </div>
</div>
